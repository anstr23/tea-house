<!-- About End -->
<!-- Products Start -->
<div class="container-fluid product py-5 my-5">
    <div class="container py-5">
        <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="fs-5 fw-medium fst-italic text-primary">Наші продукти</p>
            <h1 class="display-6">Склад чаю гармонійно створює неймовірний смак та заспокоює наш настрій.</h1>
        </div>
        <div class="card-deck">
            @foreach (var tea in teaCards)
            {
                <div class="card">
                    <img class="card-img-top" src="@tea.ImageSrc" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@tea.CardTitle</h5>
                        <p class="card-text">@tea.CardDescription</p>
                        <p class="card-text"><small class="text-muted">@tea.ShortDescription</small></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Products End -->
<!-- Article Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <img class="img-fluid" src="img/article.jpg" alt="">
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px; visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <p class="fs-5 fw-medium fst-italic text-primary">Рекомендувана стаття</p>
                    <h1 class="display-6">Історія чайного листа у світі</h1>
                </div>
                <p class="mb-4">Час від часу це був елітний вибір. Гіркота та солодкість чаю надають йому особливого смаку та ароматності.</p>
                <p class="mb-4">Чай – один із найдавніших і найпопулярніших напоїв у світі. Його історія налічує тисячі років і охоплює різні культури та континенти.</p>
                <a href="" class="btn btn-primary rounded-pill py-3 px-5">Читати далі</a>
            </div>
        </div>
    </div>
</div>

<!-- Article End -->
<!-- Video Start -->
<div class="container-fluid video my-5">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-6 py-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="py-5">
                    <h1 class="display-6 mb-4">Чай — напій для <span class="text-white">здоров'я</span> та <span class="text-white">краси</span></h1>
                    <h5 class="fw-normal lh-base fst-italic text-white mb-5">
                        Сьогодні чай є невід'ємною частиною культури багатьох народів. Його вирощують у Китаї, Індії, Шрі-Ланці, Японії, Кенії та багатьох інших країнах. З'являються нові сорти, способи приготування та чайні традиції, які продовжують захоплювати людей по всьому світу.
                        Чай – це не просто напій, а справжня історія, що об'єднує покоління та континенти.
                    </h5>
                    <div class="row g-4 mb-5">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 btn-lg-square bg-white text-primary rounded-circle me-3">
                                    <i class="fa fa-check"></i>
                                </div>
                                <span class="text-dark">Чудовий асортимент чаю</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 btn-lg-square bg-white text-primary rounded-circle me-3">
                                    <i class="fa fa-check"></i>
                                </div>
                                <span class="text-dark">Спеції та добавки</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 btn-lg-square bg-white text-primary rounded-circle me-3">
                                    <i class="fa fa-check"></i>
                                </div>
                                <span class="text-dark">Унікальні аксесуари</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 btn-lg-square bg-white text-primary rounded-circle me-3">
                                    <i class="fa fa-check"></i>
                                </div>
                                <span class="text-dark">Добре для здоров'я та краси</span>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-light rounded-pill py-3 px-5" href="#">Дізнатися більше</a>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="h-100 d-flex align-items-center justify-content-center" style="min-height: 300px;">
                    <button type="button" class="btn-play" data-bs-toggle="modal"
                            data-src="#" data-bs-target="#videoModal">
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Video End -->
<!-- Video Modal Start -->
<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">YouTube Video</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 16:9 aspect ratio -->
                <div class="ratio ratio-16x9">
                    <iframe id="video" class="embed-responsive-item" src="https://www.youtube.com/embed/hOVd_PdJDb0?autoplay=1" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Video Modal End -->
<!-- Store Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="fs-5 fw-medium fst-italic text-primary">Інтернет-магазин</p>
            <h1 class="display-6">Хочеш бути здоровим? Обирай смак чаю</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in storeItems)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="store-item position-relative text-center">
                        <img class="img-fluid" src="@item.ImageSrc" alt="@item.TitleTea">
                        <div class="p-4">
                            <div class="text-center mb-3">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <small class="fa fa-star text-primary"></small>
                                }
                            </div>
                            <h4 class="mb-3">@item.TitleTea</h4>
                            <p>@item.DescriptionTea</p>
                            <h4 class="text-primary">$@item.Price</h4>
                        </div>
                        <div class="store-overlay">
                            <a href="product-details/@item.Id" class="btn btn-primary rounded-pill py-2 px-4 m-2">
                                More Detail <i class="fa fa-arrow-right ms-2"></i>
                            </a>
                            <a href="cart/add/@item.Id" class="btn btn-dark rounded-pill py-2 px-4 m-2">
                                Add to Cart <i class="fa fa-cart-plus ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Store End -->
<!-- Testimonial Start -->
